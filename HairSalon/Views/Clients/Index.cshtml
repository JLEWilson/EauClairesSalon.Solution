@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>All clients: </h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added! Please add a client.</h3>
}

@foreach (Client client in Model)
{
  <li>client.Name</li>
}
<p>@Html.ActionLink("Add a Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>