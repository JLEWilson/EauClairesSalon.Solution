@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h3>Client Information:</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name,
new {required="required"})

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId");

  <input type="submit" value="Submit Client" class="btn btn-dark btn-lg"/>
}
<p>@Html.ActionLink("Return to Clients", "Index")</p>
<p>@Html.ActionLink("View all Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>